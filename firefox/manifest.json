{
  "manifest_version": 2,
  "name": "YouTube Topic Tagger",
  "version": "1.0",
  "description": "Tag YouTube videos with topics and upvote existing ones.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://www.youtube.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
